<!-- Contact Form -->
<section id="contact" class="py-12 sm:py-16 bg-gray-800">
  <div class="max-w-3xl mx-auto bg-gray-700 p-8 sm:p-12 rounded-lg shadow-xl">
    <h2 class="text-2xl sm:text-3xl font-bold text-white mb-6 sm:mb-8 text-center">Contact Us</h2>
    <form action="#" method="POST" class="space-y-6">
      <!-- Name Field -->
      <div class="space-y-2">
        <label for="name" class="text-base sm:text-lg text-gray-300">Full Name</label>
        <input
          type="text"
          name="name"
          placeholder="Full Name"
          id="name"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Email Field -->
      <div class="space-y-2">
        <label for="email" class="text-base sm:text-lg text-gray-300">Email</label>
        <input
          type="email"
          name="email"
          placeholder="Email"
          id="email"
          class="input input-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          required
        />
      </div>

      <!-- Message Field -->
      <div class="space-y-2">
        <label for="message" class="text-base sm:text-lg text-gray-300">Message</label>
        <textarea
          name="message"
          placeholder="Your message"
          id="message"
          class="textarea textarea-bordered w-full text-white bg-gray-600 rounded-lg p-4 focus:ring-2 focus:ring-blue-500 transition ease-in-out duration-300"
          rows="5"
          required
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div>
        <button
          type="submit"
          class="btn btn-primary w-full py-3 sm:py-4 text-lg rounded-lg bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-4 focus:ring-blue-300 transition ease-in-out duration-300"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</section>

